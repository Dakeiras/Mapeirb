<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_selection_screen"
    tools:context="com.example.enseirb.timtim.mapeirb.presenter.activities.SelectionScreenActivity"
    android:orientation="vertical"
    android:weightSum="100">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_selection_screen_help_button"
        android:text=" ? "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:text="Services"
        android:gravity="center"
        android:textSize="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/selectionscreen_button_electric_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textSize="100dp"
            android:text="@string/icon_electric_car"/>

        <Button
            android:id="@+id/selectionscreen_button_defibrilator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textSize="100dp"
            android:textColor="#0ACE0A"
            android:text="@string/icon_defibrilator"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/selectionscreen_button_internet_access"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textSize="100dp"
            android:textColor="#009FFF"
            android:text="@string/icon_internet_access"/>

        <Button
            android:id="@+id/selectionscreen_button_toilets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textSize="100dp"
            android:text="@string/icon_toilets"/>

    </LinearLayout>




</LinearLayout>
